{
	"name": "backend",
	"version": "2.0.0",
	"description": "Backend API for RateTheLandlord.org",
	"author": "ratethelandlord",
	"private": true,
	"license": "GNUgpl",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write src/**/*.{js,ts,tsx,jsx,html}",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug=0.0.0.0:9999 --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"documentation:serve": "PORT=3001 npx @compodoc/compodoc -p tsconfig.json --serve -s -r 3500",
		"compodoc": "PORT=3001 npx compodoc -p tsconfig.doc.json"
	},
	"dependencies": {
		"@compodoc/compodoc": "^1.1.21",
		"@nestjs/axios": "^0.0.8",
		"@nestjs/cli": "^9.3.0",
		"@nestjs/common": "^8.0.0",
		"@nestjs/config": "^2.1.0",
		"@nestjs/core": "^8.0.0",
		"@nestjs/jwt": "^10.0.1",
		"@nestjs/mapped-types": "*",
		"@nestjs/passport": "^9.0.3",
		"@nestjs/platform-express": "^8.0.0",
		"@nestjs/throttler": "^4.0.0",
		"bad-words": "^3.0.4",
		"bcryptjs": "^2.4.3",
		"dayjs": "^1.11.10",
		"ley": "^0.7.1",
		"openai": "^3.2.1",
		"passport": "^0.6.0",
		"passport-google-oauth20": "^2.0.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"postgres": "^3.2.4",
		"reflect-metadata": "^0.1.13",
		"request-ip": "^3.3.0",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0"
	},
	"devDependencies": {
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.0.0",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "27.5.0",
		"@types/node": "^16.0.0",
		"@types/passport-jwt": "^3.0.8",
		"@types/passport-local": "^1.0.35",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.0",
		"jest": "28.0.3",
		"prettier": "^2.3.2",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "28.0.1",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.0.0",
		"typescript": "~4.3.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
